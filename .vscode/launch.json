{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach (Remote Debug)",
            "type": "python",
            "request": "attach",
            "localRoot": "${workspaceRoot}/src",
            "remoteRoot": "/src/src",
            "port": 3000,
            "secret": "my_secret",
            "preLaunchTask": "composeForDebug",
            "exceptionHandling": {
                "ignore": ["ImportError"]
            }
        }
    ]
}